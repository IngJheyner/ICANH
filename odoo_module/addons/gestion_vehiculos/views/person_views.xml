<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Tree de Personas -->
    <record id="view_person_tree" model="ir.ui.view">
        <field name="name">gestion_vehiculos.person.tree</field>
        <field name="model">gestion_vehiculos.person</field>
        <field name="arch" type="xml">
            <list string="Personas">
                <field name="name"/>
                <field name="identification_number"/>
                <field name="vehicle_count" string="Vehículos"/>
                <field name="create_date" string="Fecha de Creación"/>
            </list>
        </field>
    </record>
    
    <!-- Vista Form de Personas -->
    <record id="view_person_form" model="ir.ui.view">
        <field name="name">gestion_vehiculos.person.form</field>
        <field name="model">gestion_vehiculos.person</field>
        <field name="arch" type="xml">
            <form string="Persona">
                <header>
                    <button name="action_view_vehicles" type="object" 
                            string="Ver Mis Vehículos" class="oe_highlight"
                            invisible="vehicle_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_vehicles" type="object" class="oe_stat_button" icon="fa-car">
                            <field name="vehicle_count" widget="statinfo" string="Vehículos"/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name" placeholder="Nombre completo"/>
                        </group>
                        <group>
                            <field name="identification_number" placeholder="DNI, CC, Pasaporte, etc."/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Vehículos">
                            <field name="vehicle_ids">
                                <list>
                                    <field name="vehicle_brand_id"/>
                                    <field name="model"/>
                                    <field name="color"/>
                                    <field name="number_of_doors"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista Search -->
    <record id="view_person_search" model="ir.ui.view">
        <field name="name">gestion_vehiculos.person.search</field>
        <field name="model">gestion_vehiculos.person</field>
        <field name="arch" type="xml">
            <search string="Buscar Personas">
                <field name="name"/>
                <field name="identification_number"/>
                <filter string="Con Vehículos" name="with_vehicles" domain="[('vehicle_count', '>', 0)]"/>
                <filter string="Sin Vehículos" name="without_vehicles" domain="[('vehicle_count', '=', 0)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Fecha de Creación" name="group_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Acción -->
    <record id="action_person" model="ir.actions.act_window">
        <field name="name">Personas</field>
        <field name="res_model">gestion_vehiculos.person</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Registra tu primera persona
            </p>
            <p>
                Las personas son los propietarios de los vehículos.
            </p>
        </field>
    </record>

</odoo>

